        }

        .dark-mode {
            background-color: #1f1f1f;
            color: #f2f2f2;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #4289c2;
            padding: 15px;
            color: white;
        }

        .menu-icon {
            font-size: 30px;
            cursor: pointer;
        }

        .menu {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            height: 100%;
            width: 250px;
            background-color: #4289c2;
            color: white;
            padding: 20px;
            box-shadow: -4px 0 10px rgba(0, 0, 0, 0.3);
            transform: translateX(100%);
            transition: transform 0.3s ease-in-out;
        }

        .menu.show {
            display: block;
            transform: translateX(0);
        }

        .menu h3 {
            margin-top: 0;
        }

        .menu label {
            font-size: 18px;
            cursor: pointer;
        }

        .dark-mode .calculator {
            background-color: #333;
            color: #f2f2f2;
        }

        input[type="number"], select {
            width: 90%;
            padding: 10px;
            margin: 10px 0;
            font-size: 16px;
        }

        button {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        .result {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }
